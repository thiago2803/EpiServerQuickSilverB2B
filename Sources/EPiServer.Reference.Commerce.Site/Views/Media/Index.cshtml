@using EPiServer.Reference.Commerce.Site.Features.Media.Models
@model ImageMediaData
<a @(!ContentReference.IsNullOrEmpty(Model.Link) ?  String.Format("href={0}", Url.ContentUrl(Model.Link)): String.Empty)>
    <img class="img-responsive" src="@Url.ContentUrl(Model.ContentLink)" alt="@Model.Description" title="@(Model.Description ?? Model.Name)" />
</a>